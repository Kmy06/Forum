<% provide(:page_title, "Edit user") %>
<h1>Update your Profile</h1>

<class class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>
		<div class="form-group"><%= f.text_field :name, class: "form-control", placeholder: "Name" %></div>
		<div class="form-group"><%= f.email_field :email, class: "form-control", placeholder: "E-Mail" %></div>
		<div class="form-group"><%= f.password_field :password, class: "form-control", placeholder: "Password" %></div>
		<div class="form-group"><%= f.password_field :password_confirmation, class: "form-control", placeholder: "Password Confirmation" %></div>
		<%= f.submit "Save changes", class: "btn btn-info" %>
		<% end %>
		<div class="gravatar_edit">
      <%= gravatar_for @user %>
      <a href="http://gravatar.com/emails" target="_blank">change</a>
    </div>
	</div>
</class>