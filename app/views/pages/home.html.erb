<style type="text/css">
	body{
		padding-top: 70px;
	}
</style>

<% provide(:page_title, "Log in") %>
<h1>Log in</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: root_path) do |f| %>
      <div class="form-group"><%= f.email_field :email, class: 'form-control', placeholder: 'E-Mail' %></div>
      <div class="form-group"><%= f.password_field :password, class: 'form-control', placeholder: 'Password' %></div>
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>New user? <%= link_to "Sign up now!", {controller: "users", action: "new"} %></p>
  </div>
</div>